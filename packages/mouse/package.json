{
  "name": "@solid-primitives/mouse",
  "version": "2.0.2",
  "description": "A collection of Solid Primitives, that capture current mouse cursor position, and help to deal with common related usecases.",
  "author": "Damian Tarnawski <gthetarnav@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/solidjs-community/solid-primitives/tree/main/packages/mouse#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidjs-community/solid-primitives.git"
  },
  "primitive": {
    "name": "mouse",
    "stage": 3,
    "list": [
      "createMousePosition",
      "createPositionToElement"
    ],
    "category": "Inputs"
  },
  "sideEffects": false,
  "private": false,
  "type": "module",
  "main": "./dist/server.cjs",
  "module": "./dist/server.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "worker": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "browser": {
      "development": {
        "import": "./dist/dev.js",
        "require": "./dist/dev.cjs"
      },
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "deno": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "node": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "development": {
      "import": "./dist/dev.js",
      "require": "./dist/dev.cjs"
    },
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "vite serve dev --host",
    "dev": "npm run start",
    "build": "jiti ../../scripts/build.ts --ssr --dev",
    "test": "vitest -c ../../configs/vitest.config.ts",
    "test:ssr": "pnpm run test --mode ssr",
    "test:watch": "watchlist src test -- npm test"
  },
  "keywords": [
    "mouse",
    "touch",
    "cursor",
    "solid",
    "primitives"
  ],
  "devDependencies": {
    "@solid-primitives/raf": "workspace:^2.1.2",
    "solid-js": "^1.5.0",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "solid-js": "^1.5.0"
  },
  "dependencies": {
    "@solid-primitives/event-listener": "^2.2.2",
    "@solid-primitives/rootless": "^1.1.3",
    "@solid-primitives/utils": "^3.0.2"
  },
  "browser": {
    "./dist/server.cjs": "./dist/index.cjs",
    "./dist/server.js": "./dist/index.js"
  }
}
