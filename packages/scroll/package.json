{
  "name": "@solid-primitives/scroll",
  "version": "2.0.4",
  "description": "Reactive primitives to react to element/window scrolling.",
  "author": "David Di Biase <dave.dibiase@gmail.com>",
  "contributors": [
    "Damian Tarnawski <gthetarnav@gmail.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/solidjs-community/solid-primitives/tree/main/packages/scroll",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solidjs-community/solid-primitives.git"
  },
  "primitive": {
    "name": "scroll",
    "stage": 2,
    "list": [
      "createScrollPosition",
      "useWindowScrollPosition"
    ],
    "category": "Inputs"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/server.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "node": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "start": "vite serve dev --host",
    "dev": "npm run start",
    "build": "jiti ../../scripts/build.ts --ssr --dev",
    "test": "vitest -c ../../configs/vitest.config.ts",
    "test:ssr": "pnpm run test --mode ssr",
    "test:watch": "watchlist src test -- npm test"
  },
  "keywords": [
    "monitor",
    "scrollTo",
    "scroll",
    "solid",
    "primitives"
  ],
  "devDependencies": {
    "jsdom": "^20.0.0",
    "prettier": "^2.7.1",
    "solid-js": "^1.5.0",
    "solid-register": "^0.2.5",
    "tslib": "^2.4.0",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2",
    "unocss": "^0.45.15",
    "uvu": "^0.5.6",
    "vite": "^3.0.9",
    "vite-plugin-solid": "^2.3.0",
    "watchlist": "^0.3.1"
  },
  "dependencies": {
    "@solid-primitives/event-listener": "workspace:^2.2.2",
    "@solid-primitives/rootless": "workspace:^1.1.3",
    "@solid-primitives/utils": "workspace:^3.0.2"
  },
  "peerDependencies": {
    "solid-js": "^1.5.0"
  }
}
